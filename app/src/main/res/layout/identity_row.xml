<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_marginBottom="5dp">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="#C0C0C0">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/idrow_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/metaphorbold"
            android:text="TextView 1" />

        <TextView
            android:id="@+id/idrow_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="3dp"
            android:fontFamily="@font/metaphorbold"
            android:text="TextView 2" />

        <TextView
            android:id="@+id/idrow_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:fontFamily="@font/metaphorbold"
            android:text="TextView 3" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"> <!-- Use a drawable for the border -->

        <ImageView
            android:id="@+id/idrow_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/upgrade_circle"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_gravity="center"
        />

    </FrameLayout>

</LinearLayout>

</androidx.cardview.widget.CardView>
